name:  Deploy to Firebase

on:
  push:
    branches:
      - main    # or whichever branch you want to deploy from

jobs:
  build_and_deploy:
    runs-on: ubuntu-latest
    steps:
      # 1. Check out your repo
      - uses: actions/checkout@v3

      # 2. Install Node (needed for functions & firebase-tools)
      - uses: actions/setup-node@v3
        with:
          node-version: '16'

      # 3. Install dependencies
      - name: Install dependencies (functions)
        run: |
          cd functions
          npm ci
      - name: Install dependencies (root)
        run: npm ci

      # 4. Deploy to Firebase
      - name: Deploy to Firebase Hosting & Functions
        uses: w9jds/firebase-action@v2
        with:
          args: deploy --only hosting,functions
        env:
          FIREBASE_TOKEN: ${{ secrets.FIREBASE_TOKEN }}
